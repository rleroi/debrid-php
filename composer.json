{
  "name": "rleroi/debrid",
  "description": "A PHP library for interacting with multiple debrid services (Real-Debrid, AllDebrid, Premiumize, TorBox, DebridLink) to download and stream torrent content with a unified API.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "debrid",
    "real-debrid",
    "alldebrid",
    "premiumize",
    "torbox",
    "debridlink",
    "torrent",
    "download",
    "streaming",
    "api",
    "php"
  ],
  "authors": [
    {
      "name": "RLeroi",
      "homepage": "https://github.com/rleroi"
    }
  ],
  "homepage": "https://github.com/rleroi/debrid-php",
  "support": {
    "issues": "https://github.com/rleroi/debrid-php/issues",
    "source": "https://github.com/rleroi/debrid-php",
    "docs": "https://github.com/rleroi/debrid-php#readme"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/rleroi"
    }
  ],
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "phpstan/phpstan": "^2.1",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "RLeroi\\Debrid\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RLeroi\\Debrid\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "stan": "phpstan analyse",
    "stan:baseline": "phpstan analyse --generate-baseline",
    "cs": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
